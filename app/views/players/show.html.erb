<%- model_class = Player -%>
<div class="page-header">
  <h1><%=t '.title', :default => @player.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @player.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:club) %>:</strong></dt>
  <dd><%= @player.club %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @player.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goals) %>:</strong></dt>
  <dd><%= @player.goals || "0" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:games) %>:</strong></dt>
  <dd><%= @player.games || "0" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:points) %>:</strong></dt>
  <dd><%= @player.points || "0" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @player.value || "0" %></dd>
</dl>

