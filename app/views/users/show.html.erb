<% provide(:title, @user.email ) %>
<h1><%= @user.username %></h1>
<p><%= @user.email %></p>
<% if current_user && !current_user.eql?(@user) %>
	<p><%= link_to "Send Message to User", new_mailboxes_path(:user_id => @user.id)  %></p>
<% end %>
<%= link_to "Create New League", new_league_path %>
<p>User has <%= @user.teams.count %> teams</p>
<% if !@user.teams.nil? %>
	<% @user.teams.each do |team| %>
		<% if can? :update, team %>
			<%= link_to team.teamname, edit_team_path(team) %>
		<% else %>
			<%= team.teamname %>
	 	<% end %>
		<% if can? :update, team %>
			| <%= link_to "Delete", team, method: :delete, :confirm => "Are you sure?"  %>
		<% end %><br />
	<% end %>
<% end %>
