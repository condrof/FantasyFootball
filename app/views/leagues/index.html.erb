<% if current_user %>
	<h2>Your teams</h2>
	<table>
		<tr>
			<th>Team</th>
			<th>Points</th>
			<th>League</th>
		</tr>
		<% current_user.teams.each do |team| %>
		<tr>
			<% if can? :update, team %>
				<td><%= link_to team.teamname, edit_team_path(team) %></td>
			<% elsif can? :read, team %>
				<td><%= link_to team.teamname, team_path(team) %></td>
			<% else %>
				<td><%= team.teamname %></td>
		 	<% end %>
				<td><%= team.points %></td>
				<td><% if !team.league.nil? %>
						<%= link_to team.league.name, league_path(team.league) %>
					<% end %>	
				</td>		
		</tr>	
		<% end %>
	</table>
<% end %>

<% if can? :create, League %>
	<p class="center"><%= link_to "Create New League", new_league_path, class: "btn btn-large btn-primary"  %></p>
<% end %>
<br /><br />
<h2>Main League</h2>
<table>
	<tr>
		<th></th>
		<th>Team</th>
		<th>User</th>
		<th>Points</th>
	</tr>
	<% i=1 %>
	<% @league.each do |team| %>
	<tr>
		<td><%= i %></td><% i+=1 %>
		<% if can? :update, team %>
			<td><%= link_to team.teamname, edit_team_path(team) %></td>
		<% elsif can? :read, team %>
			<td><%= link_to team.teamname, team_path(team) %></td>
		<% else %>		
			<td><%= team.teamname %></td>
		<% end %>
		<% if can? :read, team.user %>
			<td><%= link_to team.user.username, user_path(team.user) %></td>
		<% end %>
		<td><%= team.points %></td>
	</tr>
	<% end %>
</table>